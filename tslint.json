{
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "rules": {
    "jsx-alignment": false,
    "jsx-boolean-value": [
      true,
      "never"
    ],
    "jsx-curly-spacing": false,
    "jsx-no-multiline-js": false,
    "max-classes-per-file": [
      true,
      2
    ],
    "max-line-length": false,
    "space-before-function-paren": ["error", "always"],
    "quotemark": false,
    "semicolon": [
      false,
      "always"
    ],
    "trailing-comma": [
      true,
      "always"
    ]
  }
}
